<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>MapService</servlet-name>
        <servlet-class>cdcas.mapservice.servlets.MapService</servlet-class>
        <init-param>
            <param-name>DBTYPE</param-name>
            <param-value>postgis</param-value>
        </init-param>
        <init-param>
            <param-name>HOST</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>PORT</param-name>
            <param-value>5432</param-value>
        </init-param>
        <init-param>
            <param-name>SCHEMA</param-name>
            <param-value>public</param-value>
        </init-param>
        <init-param>
            <param-name>DATABASE</param-name>
            <param-value>postgis</param-value>
        </init-param>
        <init-param>
            <param-name>USER</param-name>
            <param-value>postgres</param-value>
        </init-param>
        <init-param>
            <param-name>PASSWD</param-name>
            <param-value>123</param-value>
        </init-param>
        <init-param>
            <param-name>DATEFORMAT</param-name>
            <param-value>yyyy-MM-dd</param-value>
        </init-param>
        <init-param>
            <param-name>CREATEVIEW</param-name>
            <param-value>CREATE OR REPLACE VIEW %s AS SELECT gid, area, perimeter, the_geom, divisec, SUM(pcount) AS pcount, "DiseaseCode", dcode  FROM fullcountview  WHERE date_part('year', "Date") = %d AND "DiseaseCode" = '%s'  GROUP BY gid, area, perimeter, the_geom, divisec, "DiseaseCode", dcode</param-value>
        </init-param>
        <init-param>
            <param-name>CONSTRING</param-name>
            <param-value>jdbc:postgresql://localhost:5432/postgis</param-value>
        </init-param>
        <init-param>
            <param-name>DRIVER</param-name>
            <param-value>org.postgresql.Driver</param-value>
        </init-param>
        <init-param>
            <param-name>SEPERATOR</param-name>
            <param-value>-</param-value>
        </init-param>
        <init-param>
            <param-name>CHECKVIEW</param-name>
            <param-value>select * from pg_views where viewname='%s'</param-value>
        </init-param>
        <init-param>
            <param-name>FULLMAP</param-name>
            <param-value>divsec</param-value>
        </init-param>
        <init-param>
            <param-name>MINVALUE</param-name>
            <param-value>SELECT  pcount FROM public.%s order by pcount limit 1</param-value>
        </init-param>
        <init-param>
            <param-name>MAXVALUE</param-name>
            <param-value>SELECT  pcount FROM public.%s order by pcount desc limit 1</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DrilldownImage</servlet-name>
        <servlet-class>cdcas.mapservice.servlets.DrilldownImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MapService</servlet-name>
        <url-pattern>/MapService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DrilldownImage</servlet-name>
        <url-pattern>/DrilldownImage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
